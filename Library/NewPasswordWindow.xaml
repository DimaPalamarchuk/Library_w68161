<Window x:Class="Library.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="New Password" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="New Password" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="passwordBox" Margin="0 10" materialDesign:HintAssist.Hint="Enter New Password"/>
            <PasswordBox x:Name="confirmPasswordBox" Margin="0 10" materialDesign:HintAssist.Hint="Confirm New Password"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Submit" Margin="0 10" Click="Button_Submit_Click"/>
                <Button Content="Cancel" Margin="0 10" Click="Button_Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
