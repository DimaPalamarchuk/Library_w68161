<Window x:Class="Library.BookSearchAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialDesignIcons="http://materialdesignicons.com/winfx/xaml/themes"
        Title="BookSearchAdmin" Height="600" Width="1000">
    <Grid>
        <Button Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="47" Width="85" Background="#FFB73F3A" BorderBrush="White" FontFamily="Century Gothic" FontWeight="Bold" FontSize="16" Click="Button_Click_Back"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="txtTitle" Width="300" Height="30" Margin="0,0,0,10" materialDesign:HintAssist.Hint="Title"/>
            <TextBox x:Name="txtAuthor" Width="300" Height="30" Margin="0,0,0,10" materialDesign:HintAssist.Hint="Author"/>
            <TextBox x:Name="txtAvailable" Width="300" Height="30" Margin="0,0,0,10" materialDesign:HintAssist.Hint="Available (quantity)"/>
            <Button Content="Add Book" Width="122" Height="30" Background="#FFD4B16A" BorderBrush="White" FontFamily="Century Gothic" FontWeight="Bold" FontSize="16" Click="Button_Click_AddBook"/>
            <DataGrid x:Name="dgBooks" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,20,0,0" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
