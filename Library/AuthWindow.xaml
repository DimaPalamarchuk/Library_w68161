<Window x:Class="Library.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="AuthWindow" Height="600" Width="1000">
    <Grid>
        <Image Source="Images/image1.png" Stretch="Fill"/>
        <Border MinWidth="300" Margin="15,15,15,38" Background="White" Padding="30" MaxWidth="550" CornerRadius="20" MinHeight="250" MaxHeight="350">
            <Border.Effect>
                <DropShadowEffect BlurRadius= "30" Color= "LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Authorization" FontSize="34" FontWeight="Bold" FontFamily="Century Gothic" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Grid Margin="10 30 30 0">
                    <Button HorizontalAlignment="Left" Content="Registration" Background="#00000000" BorderBrush="#00000000" Click="Button_Window_Reg_Click" Foreground="#FFD4B16A"/>
                    <Button HorizontalAlignment="Right" Content="Login" Style="{StaticResource MaterialDesignFlatButton}" Foreground="#DDFFFFFF" Background="#FFD4B16A"/>
                </Grid>
                <TextBox x:Name="textBoxLogin" materialDesign:HintAssist.Hint="Type Your UserName" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10"/>
                <PasswordBox x:Name="passBox" materialDesign:HintAssist.Hint="Type Your Password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Margin="10"/>
                <Button Content="Enter" Margin="0 20" Width="460" Background="#FFD4B16A" BorderBrush="#00000000" Click="Button_Auth_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
