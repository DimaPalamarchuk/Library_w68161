<Window x:Class="Library.UserPageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="AuthWindow" Height="400" Width="700">
    <Grid>
        <Image Source="Images/image1.png" Stretch="Fill"/>
        <Border MinWidth="300" Margin="15,15,15,33" Background="White" Padding="30" MaxWidth="550" CornerRadius="20" MinHeight="250" MaxHeight="350" RenderTransformOrigin="0.499,1.081">
            <Border.Effect>
                <DropShadowEffect BlurRadius= "30" Color= "LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel Height="290" VerticalAlignment="Top">
                <TextBlock Text="User account" FontSize="34" FontWeight="Bold" FontFamily="Century Gothic" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <ListView x:Name="listOfUsers" Margin="10"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
