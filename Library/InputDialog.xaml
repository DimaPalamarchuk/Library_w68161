<Window x:Class="Library.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="150" Width="300">
    <Grid>
        <Label x:Name="lblQuestion" Content="Question" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontFamily="Century Gothic" FontWeight="Bold"/>
        <TextBox x:Name="txtAnswer" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Width="250" FontFamily="Century Gothic"/>
        <Button x:Name="btnDialogOk" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,70,0,0" Click="btnDialogOk_Click" Background="#FFFF8300" BorderBrush="#FFE37F15" FontFamily="Century Gothic"/>
    </Grid>
</Window>
