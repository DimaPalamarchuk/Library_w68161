<Window x:Class="Library.ForgotPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Forgot Password" Height="300" Width="400">

    <Grid>
        <Image Source="Images/image3.png" Stretch="Fill"/>
        <StackPanel Margin="10">
            <TextBlock Text="Forgot Password" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="Century Gothic"/>
            <TextBox x:Name="textBoxEmail" Margin="0 10" materialDesign:HintAssist.Hint="Enter Email" FontFamily="Century Gothic"/>
            <TextBox x:Name="textBoxLogin" Margin="0 10" materialDesign:HintAssist.Hint="Enter Login" FontFamily="Century Gothic"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Margin="30">
                <Button Content="Submit" Margin="10 10" Click="Button_Submit_Click" Background="#FF89BA27" BorderBrush="#FF89BA27" FontFamily="Century Gothic"/>
                <Button Content="Cancel" Margin="10 10" Click="Button_Cancel_Click" Background="#FFD66915" BorderBrush="#FFD66915" FontFamily="Century Gothic"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
