<Window x:Class="Library.ForgotPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Forgot Password" Height="200" Width="400">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Forgot Password" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="textBoxEmail" Margin="0 10" materialDesign:HintAssist.Hint="Enter Email"/>
            <TextBox x:Name="textBoxLogin" Margin="0 10" materialDesign:HintAssist.Hint="Enter Login"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Submit" Margin="0 10" Click="Button_Submit_Click"/>
                <Button Content="Cancel" Click="Button_Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
